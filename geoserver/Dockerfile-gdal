# kongyl/geoserver:2.22.2-gdal
FROM kongyl/gdal-java:3.4.1-11
LABEL author="kongyl"
LABEL email="kongyl@126.com"
LABEL version="2.22.2-gdal"
MAINTAINER kongyl
ADD geoserver-2.22.2.tar.xz /root
ENV GEOSERVER_HOME=/root/geoserver-2.22.2 GEOSERVER_DATA_DIR=/geoserver/data
ENV GDAL_DATA /usr/share/gdal # for geoserver gdal
EXPOSE 8080
WORKDIR /root/geoserver-2.22.2
ENTRYPOINT ["java", "-jar", "start.jar"]
